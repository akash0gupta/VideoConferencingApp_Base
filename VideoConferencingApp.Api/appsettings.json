{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "HealthChecks": {
    "CheckInterval": "00:05:00",
    "StartupTimeout": "00:00:30"
  },
  "DatabaseSettings": {
    "CommandTimeout": 60,
    "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=VideoConferencingApp;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False"
  },
  "RedisSettings": {
    "ConnectionStrings": {
      "cache": "127.0.0.1:6379,abortConnect=false",
      "presence": "127.0.0.1:6379,abortConnect=false"
    },
    "EnableRedisFallback": true,
    "UseCacheRedisConnection": true,
    "PresenceExpirationHours": 24,
    "RedisInstanceName": "vcapp"
  },
  "CacheSettings": {
    "CacheProvider": "Hybrid", // Change this to "InMemory", "Distributed", or "None"
    "PresenceProviderType": "Hybrid", // Change this to "InMemory" or "Distributed"
    "DefaultCacheTimeSeconds": 300,
    "ShortCacheTimeSeconds": 60,
    "LongCacheTimeSeconds": 3600,
    "MemorySizeLimitMB": 256,
    "EnableFallback": true
  },
  "MessageBroker": {
    "Provider": "RabbitMq", //Kafka,RabbitMq,InMemory
    //Kafka
    "BootstrapServers": [ "localhost:9092" ],
    "GroupId": "videoconferencing_group",
    "ClientId": "videoconferencing_client",
    "EnableAutoCommit": false,
    "SecurityProtocol": "PLAINTEXT",
    "SessionTimeoutMs": 30000,
    //Rabbit Mq
    "Hostname": "localhost",
    "Port": 15672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "videoconferencing_events",
    "ExchangeType": "fanout",
    "ExchangeDurable": true,
    "QueueDurable": true,
    "PersistentMessages": true,
    "RetryQueueSuffix": "_retry",
    "DeadLetterQueueSuffix": "_dlq"
  },
  "CommonConfig": {
    "CorsDomains": "https://localhost:7157,http://localhost:5059,http://127.0.0.1:5500"
  },
  "NotificationSettings": {
    "EnableEmailNotifications": true,
    "EnableSmsNotifications": false,
    "EnablePushNotifications": true,
    "EnableInAppNotifications": true
  },
  "JwtSettings": {
    "Secret": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.vcapp.token",
    "Issuer": "VideoConferencingApp",
    "Audience": "VideoConferencingAppUsers",
    "ExpiryInMinutes": 60
  },
  "WebRTCSettings": {
    "StunServers": [
      {
        "Urls": "stun:stun.l.google.com:19302"
      },
      {
        "Urls": "stun:stun1.l.google.com:19302"
      }
    ],
    "TurnServers": [
      {
        "Urls": "turn:your-turn-server.com:3478",
        "Username": "username",
        "Credential": "password"
      }
    ],
    "IceTransportPolicy": "all",
    "BundlePolicy": "balanced",
    "RtcpMuxPolicy": "require"
  },
  "VideoConferenceSettings": {
    "MaxParticipantsPerMeeting": 100,
    "MaxMeetingDurationMinutes": 240,
    "EnableRecording": true,
    "EnableScreenSharing": true,
    "EnableChat": true,
    "EnableVirtualBackground": true,
    "DefaultVideoQuality": "720p",
    "DefaultAudioQuality": "high",
    "MaxFileUploadSizeMB": 100,
    "AllowedFileExtensions": [ ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".jpg", ".png", ".gif" ]
  },
  "SecuritySettings": {
    "AppName": "VideoConferencingApp",
    "BaseUrl": "https://localhost:5001",
    "RequireEmailVerification": true,
    "MinPasswordLength": 8,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialCharacter": true,
    "PasswordExpiryDays": 90,
    "PreventPasswordReuse": true,
    "RotateRefreshTokens": true,
    "EncryptionKey": "YourEncryptionKeyHereMustBe32CharactersLongExactly!!",
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 30,
    "EnableTwoFactorAuthentication": true,
    "EnableLoginNotifications": true,
    "SessionTimeoutMinutes": 30,
    "RememberMeDurationDays": 30,
    "RequireUniqueEmail": true,
    "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+",
    "RequireConfirmedAccount": true
  },
  "EmailSettings": {
    "FromAddress": "noreply@yourcompany.com",
    "FromName": "Your Company",
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "Username": "your-email@gmail.com",
      "Password": "your-app-specific-password",
      "UseSsl": false,
      "UseStartTls": true,
      "AllowInvalidCertificate": false
    },
    "Templates": {
      "EmailVerification": "Templates/EmailVerification.html",
      "PasswordReset": "Templates/PasswordReset.html",
      "Welcome": "Templates/Welcome.html",
      "TwoFactorCode": "Templates/TwoFactorCode.html",
      "AccountLocked": "Templates/AccountLocked.html",
      "PasswordChanged": "Templates/PasswordChanged.html"
    }
  },
  "RateLimiting": {
    "MaxCallAttemptsPerMinute": 10,
    "MaxConnectionAttemptsPerHour": 50,
    "MaxIceCandidatesPerMinute": 100,
    "BanDurationMinutes": 15
  },
  "AllowedHosts": "*"
}